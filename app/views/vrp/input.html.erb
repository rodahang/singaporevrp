<!-- page specific css and js -->
<!-- CSS -->
<%= stylesheet_link_tag "inputvrp" %>
<%= stylesheet_link_tag "dropbox" %>
<!-- JS -->
<%= javascript_include_tag 'vrp_input'%>
<%= javascript_include_tag 'dropbox'%>

<main class="main-input">
    <div class="row vrp-input-row">
        <div class="col-12 col-md-7">
            <!-- Card -->
            <div class="vrp-input">
                <!-- Card content -->
                <div class="card-body input-vrps">
                    <!-- <ul class="nav md-pills nav-justified pills-secondary near-moon-gradient" id="vrpInputTab"> -->
                    <ul class="nav nav-tabs nav-justified blue-gray-gradient" id="vrpInputTab">
                        <li class="nav-item orderpanelnavitem">
                            <a class="nav-link active" data-toggle="tab" href="#orderInputPanel" role="tab">Orders</a>
                        </li>
                        <li class="nav-item depotpanelnavitem">
                            <a class="nav-link" data-toggle="tab" href="#depotInputPanel" role="tab">Depot</a>
                        </li>
                        <li class="nav-item truckpanelnavitem">
                            <a class="nav-link " data-toggle="tab" href="#truckInputPanel" role="tab">Vehicles</a>
                        </li>
                    </ul>
                    <!-- Tab panels -->
                    <div class="tab-content card" >
                        <!--orders 2-->
                        <div class="tab-pane fade in show active" id="orderInputPanel" role="tabpanel">
                            <!-- <div class="header-truckinput-panel">manage</div> -->
                            <div class="upload-div-vrp">
                                <form method="post" enctype="multipart/form-data" novalidate class="box">
                                    <div class="box__input">
                                        <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
                                            <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"/>
                                        </svg>
                                        <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple />
                                        <label for="file"><strong>Choose a file</strong><span class="box__dragndrop"> or drag it here</span>.</label>
                                        <button type="submit" class="box__button">Upload</button>
                                    </div>
                                    <div class="box__uploading">Uploading&hellip;</div>
                                    <div class="box__success">Done! <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?" class="box__restart" role="button">Upload more?</a></div>
                                    <div class="box__error">Error! <span></span>. <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?" class="box__restart" role="button">Try again!</a></div>
                                </form>
                            </div>
                            <div class="inputs-table">
                                <div class="header-orders">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>Address<i class="fa fa-sort ml-1"></i></td>
                                                <td>Quantities<i class="fa fa-sort ml-1"></i></td>
                                                <td>Delivery Time<i class="fa fa-sort ml-1"></i></td>
                                                <td>Service Time<i class="fa fa-sort ml-1"></i></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="items-orders"> </div>
                            </div>
                        </div>
                        <!--/.orders 2-->
                        <!--depot 3-->
                        <div class="tab-pane fade " id="depotInputPanel" role="tabpanel">
                            <!-- <div class="header-truckinput-panel">manage</div> -->
                            <div class="upload-div-vrp">
                                <form method="post" enctype="multipart/form-data" novalidate class="box">
                                    <div class="box__input">
                                        <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
                                            <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"/>
                                        </svg>
                                        <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple />
                                        <label for="file"><strong>Choose a file</strong><span class="box__dragndrop"> or drag it here</span>.</label>
                                        <button type="submit" class="box__button">Upload</button>
                                    </div>
                                    <div class="box__uploading">Uploading&hellip;</div>
                                    <div class="box__success">Done! <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?" class="box__restart" role="button">Upload more?</a></div>
                                    <div class="box__error">Error! <span></span>. <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?" class="box__restart" role="button">Try again!</a></div>
                                </form>
                            </div>
                            <div class="inputs-table">
                                <div class="header-orders">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>Address</td>
                                                <td>Service Time</td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="items-orders"></div>
                            </div>
                        </div>
                        <!--/.depot 3-->
                        <!--truck 1-->
                        <div class="tab-pane fade" id="truckInputPanel" role="tabpanel">
                            <!-- <div class="header-truckinput-panel">manage</div> -->
                            <div class="upload-div-vrp">
                                <form method="post" enctype="multipart/form-data" novalidate class="box">
                                    <div class="box__input">
                                        <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
                                            <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"/>
                                        </svg>
                                        <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple />
                                        <label for="file"><strong>Choose a file</strong><span class="box__dragndrop"> or drag it here</span>.</label>
                                        <button type="submit" class="box__button">Upload</button>
                                    </div>
                                    <div class="box__uploading">Uploading&hellip;</div>
                                    <div class="box__success">Done! <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?" class="box__restart" role="button">Upload more?</a></div>
                                    <div class="box__error">Error! <span></span>. <a href="https://css-tricks.com/examples/DragAndDropFileUploading//?" class="box__restart" role="button">Try again!</a></div>
                                </form>
                            </div>
                            <div class="inputs-table">
                                <div class="header-orders">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>Name</td>
                                                <td>Capacity</td>
                                                <td>Time</td>
                                                <td>Total Distance</td>
                                                <td>Order Count</td>
                                                <td>Total Travel Time</td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="items-orders"></div>
                            </div>
                        </div>
                        <!--/.truck 1-->
                    </div>
                    <div class="vrp-input-action">
                        <a><button type="button" class="btn btn-primary btn-rounded useDfaultBtn vrp-left" onclick="useDefault()"><i class="fa fa-upload mr-1"></i>Load Assignments</button></a>

                        <%= link_to solve_path do %>
                            <button type="button" class="btn btn-primary btn-rounded solveVRPBtn vrp-right"><i class="fa fa-magic mr-1"></i>Optimize Routes</button>
                        <% end %>

                        <a><button type="button" class="btn btn-primary btn-rounded addTrucksBtn vrp-right" onclick="addTrucks()"><i class="fa fa-truck mr-1"></i>Add Vehicles</button></a>
                        <a><button type="button" class="btn btn-primary btn-rounded addDepotsBtn vrp-right" onclick="addDepots()"><i class="fa fa-home mr-1"></i>Add Depots</button></a>
                        <a><button type="button" class="btn btn-primary btn-rounded addOrdersBtn vrp-right" onclick="addOrders()"><i class="fa fa-plus-circle mr-1"></i>Add Orders</button></a>
                    </div>
                </div>
            </div>
            <!-- Card -->
        </div>
        <div class="col-12 col-md-5">
            <!-- Card -->
            <div class="card vrp-input ">
                <!-- Card content -->
                <div class="card-body main-mapview">
                    <div id="vrp-mapview"></div>
                </div>
            </div>
            <!-- Card -->
        </div>
    </div>
</main>