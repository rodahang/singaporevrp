<!-- Mask & flexbox options-->
<div class="mask rgba-gradient d-flex justify-content-center align-items-center">
    <!-- Content -->
    <div class="container">
        <!--Grid row-->
        <div class="row mt-5">
            <!--Grid column-->
            <div class="col-md-6 mb-5 mt-md-0 mt-5 white-text text-center text-md-left">
                <h1 class="h1-responsive font-weight-bold wow fadeInLeft animated" data-wow-delay="0.3s" style="visibility: visible; animation-name: fadeInLeft; animation-delay: 0.3s;">Vehicle Routing Optimizer</h1>
                <hr class="hr-light wow fadeInLeft animated" data-wow-delay="0.3s" style="visibility: visible; animation-name: fadeInLeft; animation-delay: 0.3s;">
                <h6 class="mb-3 wow fadeInLeft animated" data-wow-delay="0.3s" style="visibility: visible; animation-name: fadeInLeft; animation-delay: 0.3s;">The Vehicle Routing Optimizer is a web application which allows logistics providers to plan and optimize the navigation routes for a fleet of vehicles needing to transport goods, services or people to multiple locations with time and capacity constraints. This is a brand new product from the Department of Industrial Systems Engineering and Management of the National University of Singapore that aims to translate some of the best Optimisation and Routing research work into meaningful end products to solve traffic and logistics problems around the world. <br><br>Try it now!</h6>
                <%= link_to "View Demo Video", "https://youtu.be/hDXTem7Flu0", :target => "_blank", :class=>"btn btn-outline-white wow fadeInLeft waves-effect waves-light animated view-demo-button" %>
            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-6 col-xl-5 mb-4">
                <!--Form-->
                <div class="card wow fadeInRight animated" data-wow-delay="0.3s" style="visibility: visible; animation-name: fadeInRight; animation-delay: 0.3s;">
                    <div class="card-body">
                        <!--Header-->
                        <div class="text-center">
                            <h3 class="white-text">
                                <i class="fa fa-user white-text"></i> Login:
                            </h3>
                            <hr class="hr-light">
                        </div>
                        <div class="md-form">
                            <i class="fa fa-envelope prefix white-text"></i>
                            <input type="text" style="    color: white !important;" id="form1" class="form-control">
                            <label for="form1"  >Your username</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-lock prefix white-text"></i>
                            <input type="password" style="    color: white !important;" id="form4" class="white-text form-control">
                            <label for="form4" >Your password</label>
                        </div>
                        <div class="text-center mt-4">
                            <!-- <a href="index.html" > <button  class="btn btn-indigo waves-effect waves-light">Log in</button></a> -->
                            <%= link_to input_path do %>
                              <button  class="btn btn-indigo waves-effect waves-light">Log in</button>
                            <% end %>
                            <hr class="hr-light mb-3 mt-4">
                            <div class="inline-ul text-center d-flex justify-content-center">
                                <a class="p-2 m-2 tw-ic">
                                <i class="fa fa-twitter white-text"></i>
                                </a>
                                <a class="p-2 m-2 li-ic">
                                <i class="fa fa-linkedin white-text"> </i>
                                </a>
                                <a class="p-2 m-2 ins-ic">
                                <i class="fa fa-instagram white-text"> </i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/.Form-->
            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
    </div>
    <!-- Content -->
</div>
